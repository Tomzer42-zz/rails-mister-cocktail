<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.pratico-pratiques.com/app/uploads/sites/2/2018/08/27230837/cocktail-gin-berry.jpeg);">
  <div class="container">
    <h1><span id="banner-typed-text"></span></h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-sm-6 col-xl-4 mt-2">
        <div class="card">
          <%= cl_image_tag cocktail.photo.key, crop: :fill %>
          <%= link_to "", cocktail_path(cocktail), class:"fas fa-trash-alt", method: :delete, data: { confirm: "Are you sure?" } %>
          <div class="card-body">
            <h5 class="name"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
            <%= link_to "See ingredients", cocktail_path(cocktail), class:"btn btn-primary"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


