<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?<%= @cocktail.name %>)">
  <%= @cocktail.name %>
</div>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <p><%= dose.ingredient.name %> : <%= dose.description %>   <%= link_to 'Delete', dose_path(dose),  method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </li>
  <% end %>
</ul>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.input :description %>

  <%= f.association :ingredient %>

  <%= f.submit %>
<% end %>

<%= link_to "Back", cocktails_path %>


